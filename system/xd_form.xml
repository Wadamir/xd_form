    <file path="catalog/controller/common/header.php">
        <operation>
            <search>
				<![CDATA[
					$data['telephone'] = $this->config->get('config_telephone');
				]]>
			</search>
            <add position="after">
				<![CDATA[
					$data['xd_form_status'] = $this->config->get('xd_form_status');
					$data['xd_form_validation_type'] = $this->config->get('xd_form_validation_type');
					$current_language_id = $this->config->get('config_language_id');
                    $data['xd_form_show_btn'] = $this->config->get('xd_form_show_btn');
					$data['xd_form_button_name'] = $this->config->get('xd_form_button_name_'.$current_language_id);
					if ($data['xd_form_button_name'] == '') {
						$data['xd_form_button_name'] = $this->language->get('xd_form_button_name');
					}
				]]>
			</add>
        </operation>
    </file>
    <file path="catalog/view/theme/*/template/common/header.tpl">
        <operation>
            <search>
				<![CDATA[
					</head>
				]]>
			</search>
            <add position="before"><![CDATA[
				<?php if ($xd_form_status) { ?>
					<script src="catalog/view/javascript/xd_form.js" type="text/javascript"></script>
					<script src="catalog/view/javascript/sourcebuster.min.js" type="text/javascript"></script>
					<link href="catalog/view/theme/default/stylesheet/xd_form.css" rel="stylesheet">
					<?php if ($xd_form_status && $xd_form_validation_type != 0) { ?>
						<script src="catalog/view/javascript/jquery.mask.min.js" type="text/javascript"></script>
						<script>
							$(document).ready(function(){
								$('#xd_form_phone').mask('<?php echo $xd_form_validation_type; ?>');
							});
						</script>
					<?php } ?>
				<?php } ?>
            ]]></add>
        </operation>
        <operation>
            <search>
				<![CDATA[
					<body class="<?php echo $class; ?>">
				]]>
			</search>
            <add position="after"><![CDATA[
				<?php if ($xd_form_status && $xd_form_show_btn) { ?>
						<a href="javascript:void(0)" id="xd_form_phone_button" class="btn btn-link xd_form_btn">
							<div class="circlephone" style="transform-origin: center;"></div>
							<div class="circle-fill" style="transform-origin: center;"></div>
							<div class="img-circle" style="transform-origin: center;">
								<div class="img-circleblock" style="transform-origin: center;"><p style="margin:0;"><?php echo $xd_form_button_name; ?></p></div>
							</div>
						</a>
				<?php } ?>
            ]]></add>
        </operation>
    </file>
    <file path="catalog/controller/common/footer.php">
        <operation>
            <search>
				<![CDATA[
					$this->load->language('common/footer');
				]]>
			</search>
            <add position="before"><![CDATA[
                    $this->load->model('setting/setting');
                    $data['xd_form_status'] = $this->config->get('xd_form_status');
                    $current_language_id = $this->config->get('config_language_id');
                    $data['xd_form_success_field'] = $this->config->get('xd_form_success_field_' . $current_language_id);
            ]]></add>
        </operation>
    </file>
    <file path="catalog/view/theme/*/template/common/footer.tpl">
        <operation>
            <search>
				<![CDATA[
					</body>
				]]>
			</search>
            <add position="before"><![CDATA[
				<?php if ($xd_form_status) { ?>
					<div id="xd_form_success" class="modal fade">
						<div class="modal-dialog">
							<div class="modal-content">
								<div class="modal-body">
									<div class="text-center"><?php echo $xd_form_success_field; ?></div>
								</div>
							</div>
						</div>
					</div>
					<div id="xd_form_modal" class="modal fade"></div>
				<?php } ?>
            ]]></add>
		</operation>
    </file>
